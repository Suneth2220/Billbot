<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.FastTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set status bar color for day mode -->
        <item name="android:statusBarColor">@color/blue_box</item>
        <!-- Optional: Set status bar icons to dark for better contrast -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- App theme -->
    <style name="Theme.FastTracker" parent="Base.Theme.FastTracker" />

    <!-- Light theme for PreferenceScreen -->
    <style name="PreferenceThemeOverlayLight" parent="PreferenceThemeOverlay">
        <!-- Enforce light mode colors -->
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">#666666</item> <!-- Dark gray for secondary text -->
        <item name="preferenceCategoryTitleTextColor">@android:color/black</item>
        <item name="android:colorAccent">@color/blue_box</item> <!-- Match accent with status bar -->
        <!-- Ensure Material3 light theme -->
        <item name="colorPrimary">@color/blue_box</item>
        <item name="colorPrimaryVariant">@color/blue_box</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
    </style>
</resources>